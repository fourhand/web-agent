{
  "manifest_version": 3,
  "name": "Fourhand Chat",
  "version": "1.0",
  "description": "Chat with a local LLM server from a floating chat UI.",
  "permissions": ["scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true,
      "match_about_blank": true
    }
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  }
}
