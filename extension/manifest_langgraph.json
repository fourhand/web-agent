{
  "manifest_version": 3,
  "name": "LangGraph Web Agent",
  "version": "1.0.0",
  "description": "LangGraph 기반 웹 자동화 에이전트",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "ws://localhost:8001/*",
    "wss://localhost:8001/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "about:blank"
      ],
      "js": ["content_langgraph.js"],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "sidepanel_langgraph.html",
    "default_title": "LangGraph Web Agent"
  },
  "side_panel": {
    "default_path": "sidepanel_langgraph.html"
  },
  "background": {
    "service_worker": "background_langgraph.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
